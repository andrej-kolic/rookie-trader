{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "tsconfig.json"],

  "globalEnv": [
    "BUNDLER",
    "BUILD_ENVIRONMENT",
    "NODE_ENV",
    "NODE_DEBUG",
    "MODE",
    "APP_REACT_TITLE",
    "APP_REACT_ENV_FILE"
  ],
  "globalPassThroughEnv": ["AWS_SECRET_KEY", "GITHUB_TOKEN"],

  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "preview": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "check:type": {
      "dependsOn": ["^build", "^check:type"]
    },
    "test:watch": {
      "cache": false
    },
    "clear:output": {
      "cache": false
    }
  }
}
